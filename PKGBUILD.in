pkgname=@PACKAGENAME@
pkgver=@DATE@
pkgrel=@PACKAGEREL@
pkgdesc="A filebrowser plugin for the DeaDBeeF audio player"
arch=('any')
url="http://sourceforge.net/projects/deadbeef-fb/"
license=(GPL)
depends=('deadbeef>=0.6')
optdepends=('gtk2: needed to build GTK2 version'
      'gtk3: needed to build GTK3 version')
backup=()
source=(http://downloads.sourceforge.net/project/${pkgname}/master/${pkgname}_${pkgver}_src.tar.gz)
md5sums=('@MD5SUM@')
sha1sums=('@SHA1SUM@')

build() {
  cd "$srcdir/$pkgname-$pkgver/"
  ./autogen.sh
  ./configure
  make PREFIX=/usr sysconfdir=/etc localstatedir=/var
}

package() {
  cd "$srcdir/$pkgname-$pkgver/"
  ./autogen.sh
  ./configure
  make PREFIX=/usr sysconfdir=/etc localstatedir=/var DESTDIR="$pkgdir" install
}

